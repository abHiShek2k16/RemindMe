<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CastProfileAct"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePhoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_logo_height"
                android:layout_marginTop="@dimen/x32"/>

            <LinearLayout
                android:id="@+id/profileUselessOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/profilePhoto"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="@dimen/x8"
                    android:textSize="@dimen/xs22"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:id="@+id/profileYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_marginLeft="@dimen/x8"
                    android:textSize="@dimen/xs12"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileUselessTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/profileUselessOne"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="@dimen/x22"
                    android:layout_height="@dimen/x22"
                    android:textAlignment="textEnd"
                    android:src="@drawable/location"
                    android:padding="@dimen/x4"/>
                <TextView
                    android:id="@+id/profileLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="@dimen/x8"
                    android:textSize="@dimen/xs12"
                    android:paddingTop="@dimen/x4"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>

            <TextView
                android:id="@+id/useLessThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:layout_below="@id/profileUselessTwo"
                android:layout_marginTop="@dimen/x22"
                android:textStyle="bold"
                android:textSize="@dimen/x16S"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/x16"/>

            <TextView
                android:id="@+id/profileBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:layout_below="@id/useLessThree"
                android:layout_marginTop="@dimen/x4"
                android:textSize="@dimen/x16S"
                android:fontFamily="sans-serif"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/x16"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>